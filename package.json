{
  "name": "kiss",
  "version": "1.0.0",
  "description": "KISS - Keyboard Input Source Switcher for macOS",
  "main": "dist-electron/main.js",
  "author": "KISS contributors",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "start": "electron ."
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.kiss.inputswitcher",
    "productName": "KISS",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "resources/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/kawa-helper",
        "to": "kawa-helper"
      },
      {
        "from": "resources/trayTemplate.png",
        "to": "trayTemplate.png"
      }
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "i18next": "^25.7.4",
    "react-i18next": "^16.5.2"
  }
}
